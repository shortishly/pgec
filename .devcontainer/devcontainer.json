{
    "name": "pgec",

    "dockerFile": "Dockerfile",

    "postStartCommand": "docker compose --profile db --profile monitoring up -d",

    "containerEnv": {
        "PGMP_DATABASE_USER": "postgres",
        "PGMP_DATABASE_PASSWORD": "postgres"
    },

    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "32gb"
    },

    "customizations": {
        "codespaces": {
            "openFiles": [
                "README.md",
                "Makefile",
                "src/pgec_app.erl",
                "src/pgec_sup.erl"
            ]
        }
    },

    "forwardPorts": [3000,
                     5432,
                     8080,
                     9090,
                     9100,
                     11211],

    "features": {
        "ghcr.io/devcontainers/features/sshd:1": {},

        "ghcr.io/devcontainers/features/common-utils:2": {},

        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    }
}
